---
layout: layouts/base.njk
---
<article class="post">
    <header class="post-header">
        {% if featured_image %}
        <img src="{{ featured_image }}" alt="{{ title }}" class="featured-image">
        {% endif %}
        
        <div class="post-title-container">
            <h1>{{ title }}</h1>
            
            <div class="post-meta">
                <div class="meta-row">
                    <span class="meta-icon">📅</span>
                    <span>Published: {{ page.date | readableDate }}</span>
                </div>
                {% if last_updated %}
                <div class="meta-row">
                    <span class="meta-icon">🔄</span>
                    <span>Last updated: {{ last_updated | readableDate }}</span>
                </div>
                {% endif %}
                <div class="meta-row">
                    <span class="meta-icon">⏱️</span>
                    <span>{{ content | readingTime }} min read</span>
                </div>
                {% if tags %}
                <div class="meta-row">
                    <span class="meta-icon">🏷️</span>
                    <span>{{ tags | join(", ") }}</span>
                </div>
                {% endif %}
            </div>
        </div>
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>
