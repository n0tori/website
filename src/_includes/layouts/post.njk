---
layout: layouts/base.njk
---
<article class="post">
    {% if featured_image %}
    <img src="{{ featured_image }}" alt="{{ title }}" class="featured-image">
    {% endif %}
    
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        
        <div class="post-meta">
            <span class="post-meta-item">Published: {{ page.date | readableDate }}</span>
            {% if last_updated %}â—†
            <span class="post-meta-item">Last updated: {{ last_updated | readableDate }}</span>
            {% endif %}â—†
            <span class="post-meta-item">{{ content | readingTime }} min read</span>
        </div>
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>